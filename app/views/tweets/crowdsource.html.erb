<h1>Crowdsource</h1>
<%= link_to 'Crowdsource These Tweets', crowdsourcing_path %>
<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Body</th>
      <th>Appropriateness</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.author %></td>
        <td><%= tweet.body %></td>
         <td><%= tweet.approp_score %></td>
     <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>      
   </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Create a New Tweet', new_tweet_path %>
